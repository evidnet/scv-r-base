{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "newLine": "lf",
    "esModuleInterop": true,
    "outDir": "lib"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "node_modules",
    "lib",
    "test"
  ],
  "compileOnSave": false
}